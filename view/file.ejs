<html>
    <head>
       <title>
        <%= locals.title %>
       </title>
       <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
       <link rel="stylesheet" href="/home.css">
       <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@700&display=swap" rel="stylesheet">
    </head>
    <body>
        
        <h1 id="head"><i class="fas fa-address-book"></i> Contact List</h1>

        <div id="contact-list-container">
        <ul>
            <% for(let i of contact_list){%>
                <li class="list">
                    <div class="details">
                        <p><%= i.name %></p>
                        <p><%= i.phone %></p>
                       
                    </div>
                    <div class="delete-contact">
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fas fa-window-close fa-2x"></i>
                        </a>
                    </div>
                    
                </li>
            <% } %>
        </ul>
    </div>
    <div class="fill-up">
        <form action="contact-add" method="POST">
            <input type="text" name="Name" class="check" placeholder="Enter Name" required>
            <input type="number" name="Phone" placeholder="Enter Phone Number" required>
            <button id="button" type="submit">Add Contact</button>
        </form>
    </div>
    </body>
</html>